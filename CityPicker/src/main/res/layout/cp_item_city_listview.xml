<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/tv_item_city_listview_letter"
        style="@style/resLetterIndexTextViewStyle"
        android:textSize="16sp"
        android:textColor="#333333"
        android:clickable="false"/>

    <TextView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="@dimen/reside_letter_bar_width"
        android:background="@color/color_ececec"/>
    <TextView
        android:id="@+id/tv_item_city_listview_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/reside_letter_bar_width"
        android:background="#ffffff"
        android:clickable="true"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="@color/color_5c5c5c"/>
</LinearLayout>